#include <stdlib.h>
#include <stdio.h>

int main()
{
    int x[]={2,5,0,4};
    int h[]={1,2,1};
    int x_s=sizeof(x)/sizeof(x[0]);
    int h_s=sizeof(h)/sizeof(h[0]);
    convolution(x,h,x_s,h_s);
    return 0;
}
int convolution(int x[],int h[],int x_s,int h_s)
{
    int size=x_s+h_s -1;
    int y[size];
    int i,j,k;
   printf("%d\n",size);
    for(i=0;i<size;i++)
    {
        y[i]=0;
        for(j=0;j<x_s;j++)
        {
            if((i-j)>=0 && (i-j)<h_s)
            {
                y[i]=y[i]+x[j]*h[i-j];
            }
        }
       printf("%d\n",y[i]);
    }
}
